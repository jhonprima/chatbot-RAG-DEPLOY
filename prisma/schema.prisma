// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Model untuk menyimpan data pengguna
model User {
  id            String        @id @default(uuid()) @db.Uuid
  name          String?       @db.VarChar(100)
  email         String        @unique @db.VarChar(100)
  password      String        @db.VarChar(100)
  created_at    DateTime?     @default(now()) @db.Timestamptz(6)
  updated_at    DateTime?     @updatedAt @db.Timestamptz(6)
  
  // Relasi: Satu User bisa memiliki banyak ChatContent dan banyak Message
  chat_contents ChatContent[]
  messages      Message[]
}

/// Model untuk menyimpan setiap pesan individu
model Message {
  id         Int       @id @default(autoincrement())
  content    String    @db.Text
  role       String?   @default("user") @db.Text
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @updatedAt @db.Timestamptz(6)

  // FIX: Menambahkan relasi ke User
  user_id    String    @db.Uuid
  user       User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // FIX: Menambahkan relasi ke ChatContent
  chat_content_id Int
  chat_content    ChatContent @relation(fields: [chat_content_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([chat_content_id])
}

/// Model untuk menyimpan metadata setiap sesi chat
model ChatContent {
  id         Int       @id @default(autoincrement())
  chat_id    String    @db.VarChar(100) // ID unik untuk sesi chat, bisa berupa UUID dari frontend
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  updated_at DateTime? @updatedAt @db.Timestamptz(6)

  // Relasi ke User pemilik chat
  user_id    String    @db.Uuid
  user       User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  // IMPROVEMENT: Menghapus kolom 'messages' dan 'history' yang redundant
  // Sebagai gantinya, kita membuat relasi ke tabel Message
  messages   Message[]

  @@unique([user_id, chat_id])
}
